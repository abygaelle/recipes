<%- include('../partials/html-head') %>
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>
<link rel="stylesheet" href="/stylesheets/recipes/new.css" />

<%- include('../partials/nav') %>

<main>
  <h1 class="new-title"> Add Recipe </h1>
  <section>
    <% if (user) { %>
      <form class="add-inputs"action="/recipes" method="POST">
        <label class="new-titles">Name:
          <input type="text" name="name" autocomplete="off">
        </label><br>
        <label class="new-titles">Total Time:
          <input type="number" name="totalTime" autocomplete="off">
        </label><br>
        <label class="new-titles">Ingredients:
          <textarea type="text" name="ingredients" autocomplete="off" rows="5"></textarea>
        </label><br>
        <label class="new-titles">Directions:
          <textarea type="text" name="directions" autocomplete="off" rows="5"></textarea>
        </label><br>
        <button class="btn btn-primary" type="submit">Add Recipe</button>
      </form>
    <% } %>
  </section>
</main>

<%- include("../partials/footer") %>
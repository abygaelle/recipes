<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/new.css" />

<%- include('../partials/nav') %>

<main>
  <h1> Add Recipe </h1>
  <section>
    <% if (user) { %>
      <form action="/recipes" method="POST">
        <label>Name:
          <input type="text" name="name" autocomplete="off">
        </label><br>
        <label>Total Time:
          <input type="number" name="totalTime" autocomplete="off">
        </label><br>
        <label>Ingredients:
          <textarea type="text" name="ingredients" autocomplete="off"></textarea>
        </label><br>
        <label>Directions:
          <textarea type="text" name="directions" autocomplete="off"></textarea>
        </label><br>
        <button type="submit">Add Recipe</button>
      </form>
    <% } %>
  </section>
</main>


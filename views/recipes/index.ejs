<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/index.css" />
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>
<%- include('../partials/nav') %>

<main>
  <h1 class="title-hp"> Recipes </h1>
      <% recipes.forEach(recipe => { %> 
      <div class="row">
        <div class="column">
        <div class="card text-center" style="width: 19rem;">
          <div class="card-body">
            <h4 class="card-title">Name: <%= recipe.name %></h4>
            <h5 class="card-text">by: <%= recipe.owner.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Total Time: <%= recipe.totalTime %></h6>
            
            <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">Details</a>
            <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
              <button class="btn btn-primary">X</button>
            </form>
            </div>
          </div>
        </div>
      </div>
      <% }) %> 
</main>

<%- include('../partials/footer') %>